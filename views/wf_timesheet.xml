<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Search View -->
        <record id="wf_timesheet_search_view" model="ir.ui.view">
            <field name="name">wf.timesheet.search.view</field>
            <field name="model">wf.timesheet</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <!-- Tree View -->
        <record id="wf_timesheet_tree_view" model="ir.ui.view">
            <field name="name">wf.timesheet.tree.view</field>
            <field name="model">wf.timesheet</field>
            <field name="arch" type="xml">
                <tree string="Workfolio Timesheet">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- Form View -->
        <record id="wf_timesheet_form_view" model="ir.ui.view">
            <field name="name">wf.timesheet.form.view</field>
            <field name="model">wf.timesheet</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Workfolio Timesheet Form">
                    <sheet string="Workfolio Timesheet">
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="toggle_active" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" invisible="1"/>
                                <span name="active" class="o_stat_text text-success" attrs="{'invisible': [('active', '=', False)]}">Active</span>
                                <span name="active" class="o_stat_text text-danger" attrs="{'invisible': [('active', '=', True)]}">Deactive</span>
                            </button>
                        </div>
                        <div>
                            <h5 class="text-center">
                                <span style="font-weight: normal;">Code: </span>
                                <field name="code" class="text-center" nolabel="True" readonly="True"/>
                            </h5>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <label for="name" class="oe_edit_only" string="Title"/>
                                <field name="name" required="True"/>
                            </h1>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>


        <!-- Actions -->
        <record id="action_wf_team_view" model="ir.actions.act_window">
            <field name="name">Workfolio Team</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wf.timesheet</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wf_team_tree_view"/>
        </record>

    </data>
</odoo>
